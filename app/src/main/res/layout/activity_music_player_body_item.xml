<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_grey_mask_white">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/file_image"
        android:src="@drawable/round_audiotrack_black_24"
        android:tint="@color/white_c"
        android:contentDescription="MP3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_c"
        android:text="MP3 Name is short or loooooo ooooo oooo oooo o o o o o o oooo ooooog"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@id/file_image"
        android:layout_centerVertical="true"/>

</RelativeLayout>