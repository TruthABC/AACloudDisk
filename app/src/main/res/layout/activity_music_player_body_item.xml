<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_grey_mask_white">

    <ImageView
        android:id="@+id/front_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/round_volume_up_black_24"
        android:tint="@color/primary_light"
        android:contentDescription="MP3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_c"
        android:text="MP3 Name is short or loooooo ooooo o o o o o o o o o o o o o o g"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/front_image"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/round_close_black_24"
        android:background="@drawable/ripple_grey"
        android:tint="@color/white_c"
        android:contentDescription="delete it from list"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>