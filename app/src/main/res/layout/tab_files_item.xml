<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/file_image"
        android:src="@drawable/file77"
        android:tint="@color/gray_deep"
        android:contentDescription="File or Folder"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File or Folder Name"
        android:maxLines="2"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/delete_logo"
        android:layout_toEndOf="@id/file_image"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/delete_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/opened7"
        android:tint="@android:color/holo_red_dark"
        android:contentDescription="Delete"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/rename_logo"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/rename_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/edit"
        android:tint="@color/gray_deepest"
        android:contentDescription="Rename"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/inner_toggle"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/inner_toggle"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" >
        <ImageView
            android:id="@+id/browser_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_open_in_browser_black_24"
            android:tint="@color/gray_deepest"
            android:contentDescription="Download" />
        <ImageView
            android:id="@+id/into_folder_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right66"
            android:tint="@color/gray_deepest"
            android:contentDescription="Into Folder" />
    </RelativeLayout>

</RelativeLayout>