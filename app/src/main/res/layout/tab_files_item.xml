<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_tiny"
    android:clickable="false">

    <ImageView
        android:layout_width="@dimen/image_height_normal"
        android:layout_height="@dimen/image_height_normal"
        android:id="@+id/file_image"
        android:src="@drawable/file77"
        android:contentDescription="File or Folder"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File or Folder Name"
            android:maxLines="2"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_tiny_half">

            <ImageView
                android:id="@+id/rename_logo"
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:src="@drawable/edit"
                android:contentDescription="Rename" />

            <ImageView
                android:id="@+id/download_logo"
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:src="@drawable/download72"
                android:layout_marginLeft="@dimen/margin_normal"
                android:contentDescription="Download" />

            <ImageView
                android:id="@+id/delete_logo"
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:src="@drawable/opened7"
                android:layout_marginLeft="@dimen/margin_normal"
                android:contentDescription="Delete" />

            <ImageView
                android:id="@+id/into_folder_logo"
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:src="@drawable/right66"
                android:layout_marginLeft="@dimen/margin_normal"
                android:contentDescription="Into Folder" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>