<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_highlight_mask_white">

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music List Name (10)"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/delete_list_logo"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/delete_list_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/round_delete_forever_black_36"
        android:background="@drawable/ripple_grey"
        android:contentDescription="Delete"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/rename_list_logo"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/rename_list_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/edit"
        android:tint="@color/gray_deepest"
        android:background="@drawable/ripple_grey"
        android:contentDescription="Rename"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>